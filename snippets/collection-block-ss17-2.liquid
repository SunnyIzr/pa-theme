<div class="product_item collect-block {% if platform == 'desktop' %}hidden-xs{%else%}visible-xs{%endif%}">
  <div class="product">
    
    <div class="product-container">
  
        
        
      <div id='carousel-aw1-{{ platform }}' class='block-slides carousel slide' data-ride='carousel'>
        <div class='carousel-inner' role='listbox'>
            
          <div class='block-slide item active'>
            <img class='collection-background' src="{{ 'ss17-block2.jpg' | asset_url }}">
            <div class='story-block'>
              <div class='inner-content'>

                <h4>Metal Details</h4>
                <div class='sep'></div>
                <p>Silver and gold chainmail adorns graphic silhouettes, offering a bold update on streamlined shapes.</p>
              </div>
            </div>
          </div>

        
        </div>
        
      
      </div>

      <div class="product-wrap">
        <div class="product-image">
          <div class="wrap">
            {% include 'spinner2' %}
            <a>
              <img style='' src="{{ 'block-ph.jpg' | asset_url }}" class="main-image img-responsive" alt="{{ prod.title }}" />
            </a>
          </div>
        </div>
        <div class="product-content">
          <div class="inner">
            <div class="product-title">
              <a href="#">
                Collection Block
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>