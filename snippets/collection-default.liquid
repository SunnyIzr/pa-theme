{% if settings.collection_default %}
{% assign temp = settings.collection_default_use %}
{% assign collection = collections[temp] %}
{% assign products   = collection.products %}
{% if products.size > 0 %}
<div class="widget-wrapper featured-products clearfix">
  
  {% if settings.collection_default_heading != blank %}
  <div class="title">
    {{ settings.collection_default_heading }}
  </div>
  {% endif %}

  <div id="featured-products" class="cat-grid row clearfix">
    {% for prod in products limit: settings.collection_default_number %}
    <div class="product_item item-{{prod.id}}">
      {% include 'product-item' %}
    </div>
    {% endfor %}
  </div>
</div>
{% endif %}
{% endif %}