{% if settings.collection_slider %}
<div id="collection-slider" class="flexslider">
  {% assign image = collection.handle | append: '-banner-desktop.jpg' %}
  {% assign mobile_image = collection.handle | append: '-banner-mobile.jpg' %}
  <img class='hidden-xs' src="{{ image | asset_url }}">
  <img class='visible-xs' src="{{ mobile_image | asset_url }}">
  <div class="slide-caption caption header collection-header">
    <h1>{{ collection.title }}</h1>
  </div>
  
  {% comment %}
  <ul class="slides">
    
    {% for i in (1..1) %}
    {% assign show = 'collection_slider_' | append: i %}
    {% if settings[show] %}
    {% assign image = 'collection_slider_img_' | append: i %}
