{% if settings.contact_map and settings.contact_map_placement == 'full-width' %}
<div id="contact_map" class="map"></div>
{% endif %}
<div id="col-main" class="contact_map clearfix">
  {% if settings.contact_map and settings.contact_map_placement == 'within-container' %}
  <div class="container">
    <div id="contact_map" class="map"></div>
  </div>
  {% endif %}
  
  <div class="container">
    <div class="row">
      <div class="col-sm-18">
        <div class="widget-wrapper">
          {% form 'contact' %}

          {% if settings.contact_map_heading != blank %}
          <h1 class="title">
            {{settings.contact_map_heading}}
          </h1>
          {% endif %}

          {% if form.posted_successfully? %}
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ 'contact.form.post_success' | t }}
          </div>
          {% endif %}

          {% if form.errors %}
          <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ form.errors | default_errors }}
          </div>
          {% endif %}

          <ul id="contact-form" class="row list-unstyled">
            <li class="col-sm-8">
              <label class="control-label" for="name">{{ 'contact.form.name' | t }}</label>
              <input type="text" id="name" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.first_name }} {{ customer.last_name }}{% endif %}" class="btn-block" name="contact[name]" />
            </li>
            <li class="col-sm-8{% if form.errors contains 'email' %} error{% endif %}">
              <label class="control-label" for="email">{{ 'contact.form.email' | t }} <span class="req">*</span></label>
              <input required type="email" id="email" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="btn-block email" name="contact[email]" />
            </li>
            <li class="col-sm-8">
              <label class="control-label" for="phone">{{ 'contact.form.phone' | t }}</label>
              <input type="text" id="phone" value="{{ form.phone }}" class="btn-block" name="contact[phone]" />
            </li>
            <li class="col-sm-24{% if form.errors contains 'body' %} error{% endif %}">
              <label class="control-label" for="message">{{ 'contact.form.message' | t }} <span class="req">*</span></label>
              <textarea required id="message" cols="40" rows="5" class="btn-block" name="contact[body]">{{ form.body }}</textarea>
            </li>
            <li class="col-sm-24 last">
              <button type="submit" class="btn-arrow btn btn-1">
                <i class="icomoon-arrow-right"></i> {{ 'contact.form.send' | t }}
              </button>
            </li>
          </ul>
          {% endform %}
        </div>
      </div>

      <div class="col-sm-6">
        {% if settings.contact_info_show %}
        <div class="widget-contact widget-wrapper">
          {% if settings.contact_info_heading != blank %}
          <div class="title">
            {{settings.contact_info_heading}}
          </div>
          {% endif%}
          <ul class="list-unstyled contact-world-map">
            {% if settings.contact_info_address != blank %}
            <li>
              <i class="fa fa-home"></i>&nbsp; {{settings.contact_info_address}}
            </li>
            {% endif %}

            {% if settings.contact_info_phone != blank %}
            <li>
              <i class="fa fa-phone"></i>&nbsp; {{settings.contact_info_phone}}
            </li>
            {% endif %}

            {% if settings.contact_info_email != blank %}
            <li>
              <i class="fa fa-envelope"></i>&nbsp; <a href="mailto:{{settings.contact_info_email}}">{{settings.contact_info_email}}</a>
            </li>
            {% endif %}

            {% if settings.contact_info_other != blank %}
            <li>
              <i class="fa fa-clock-o"></i>&nbsp; {{settings.contact_info_other}}
            </li>
            {% endif %}
          </ul>
        </div>
        {% endif %}

        {% if settings.contact_social_show %}
        <div class="widget-wrapper social-icons">
          {% if settings.contact_social_heading != blank %}
          <div class="title">
            {{settings.contact_social_heading}}
          </div>
          {% endif %}

          <ul class="list-inline text-left">
            {% if settings.contact_social_facebook_show %}<li><a target="_blank" href="{{ settings.social_icons_facebook_link }}" class="social-icon facebook" title="Facebook"><i class="icomoon-facebook"></i></a></li>{% endif %}
            {% if settings.contact_social_twitter_show %}<li><a target="_blank" href="{{ settings.social_icons_twitter_link }}" class="social-icon twitter" title="Twitter"><i class="icomoon-twitter"></i></a></li>{% endif %}
            {% if settings.contact_social_pinterest_show %}<li><a target="_blank" href="{{ settings.social_icons_pinterest_link }}" class="social-icon pinterest" title="Pinterest"><i class="icomoon-pinterest"></i></a></li>{% endif %}
            {% if settings.contact_social_google_show %}<li><a target="_blank" href="{{ settings.social_icons_google_link }}" class="social-icon google" title="Google Plus"><i class="icomoon-googleplus"></i></a></li>{% endif %}
            {% if settings.contact_social_youtube_show %}<li><a target="_blank" href="{{ settings.social_icons_youtube_link }}" class="social-icon youtube" title="Youtube"><i class="icomoon-youtube"></i></a></li>{% endif %}
            {% if settings.contact_social_youtube_show %}<li><a target="_blank" href="{{ settings.social_icons_vimeo_link }}" class="social-icon vimeo" title="Vimeo"><i class="icomoon-vimeo"></i></a></li>{% endif %}
            {% if settings.contact_social_flickr_show %}<li><a target="_blank" href="{{ settings.social_icons_vimeo_link }}" class="social-icon flickr" title="Flickr"><i class="icomoon-flickr"></i></a></li>{% endif %}
            {% if settings.contact_social_instagram_show %}<li><a target="_blank" href="{{ settings.social_icons_instagram_link }}" class="social-icon instagram" title="Instagram"><i class="icomoon-instagram"></i></a></li>{% endif %}
            {% if settings.contact_social_tumblr_show %}<li><a target="_blank" href="{{ settings.social_icons_tumblr_link }}" class="social-icon tumblr" title="Tumblr"><i class="icomoon-tumblr"></i></a></li>{% endif %}
            {% if settings.contact_social_rss_show %}<li><a target="_blank" href="{{ settings.social_icons_rss_link }}" class="social-icon rss" title="RSS Feed"><i class="fa fa-rss"></i></a></li>{% endif %}
          </ul>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

