<div id="col-main" class="login clearfix">  
  <div class="container">
    <div class="row">
      <div class="col-md-24">
        <div id="customer-activate" class="content">
          <div class="widget-wrapper">
            <h2 class="title">{{ 'customer.activate_account.title' | t }}</h2>
            
            <p>{{ 'customer.activate_account.subtext' | t }}</p>

            {% form 'activate_customer_password' %}

            {% if form.errors %}
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              {{ form.errors | default_errors }}
            </div>
            {% endif %}

            <div class="clearfix form-row">
              <label class="control-label" for="password">{{ 'customer.activate_account.password' | t }} <span class="req">*</span></label>
              <input type="password" required name="customer[password]" id="customer_password" class="col-sm-8 col-xs-24 password" />
            </div>
            <div class="clearfix form-row">
              <label class="control-label" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }} <span class="req">*</span></label>
              <input type="password" required name="customer[password_confirmation]" id="customer_password_confirmation" class="col-sm-8 col-xs-24 password" />
            </div>
            <div class="control-group last">
              <button class="btn-arrow btn btn-1" type="submit"><i class="icomoon-arrow-right"></i> {{ 'customer.activate_account.submit' | t }}</button>
              <button type="submit" class="btn cancel" name="decline" id="customer_decline">{{ 'customer.activate_account.cancel' | t }}</button>
            </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>