<div id="col-main" class="login clearfix">
  <div class="container">
    <div class="row">
      <div class="col-md-24">
        <div id="customer-reset-password" class="content">
          <div class="widget-wrapper">
            <h2>{{ 'customer.reset_password.title' | t }}</h2>

            <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {% form 'reset_customer_password' %}

            {% if form.errors %}
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              {{ form.errors | default_errors }}
            </div>
            {% endif %}

            <div class="control-group">
              <label class="control-label" for="customer_password">{{ 'customer.reset_password.password' | t }} <span class="req">*</span></label>
              <input type="password" required name="customer[password]" id="customer_password" class="col-sm-8 col-xs-24 password" />
            </div>
            <div class="control-group">
              <label class="control-label" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }} <span class="req">*</span></label>
              <input type="password" required name="customer[password_confirmation]" id="customer_password_confirmation" class="col-sm-8 col-xs-24 password" />
            </div>
            <div class="control-group last">
              <button class="btn-arrow btn btn-1" type="submit"><i class="icomoon-arrow-right"></i> {{ 'customer.reset_password.submit' | t }}</button>
            </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>