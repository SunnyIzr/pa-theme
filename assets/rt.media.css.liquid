/* Large desktop */
@media (min-width: 1200px) {
  .cat-list #sandBox .product_item .product-image{
    width: {{100.0 | divided_by: settings.collection_per_row_pc }}%;
  }
  .cat-list #sandBox .product_item .product-content {
