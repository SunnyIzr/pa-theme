/* ----------------------------------------------
Collections Grid Product
---------------------------------------------- */
.advanced-pagination { height: 0; }
.product_item.animated {
  opacity: 0;
}
.product {
  position: relative;
  background-color: transparent;

  img {
    padding-top: 20px;
    display: inline-block;
    visibility: visible;
    opacity: 1;
    filter: alpha(opacity=100);
  }

  img.hover-image {
    display: none;
    visibility: hidden;
    opacity: 0;
    filter: alpha(opacity=0);
  }

  &:hover {
    background-color: white;

    .product-utils { display: block; }
    .product-label { display: none; }

    img.main-image {
      display: none;
      visibility: hidden;
      opacity: 0;
      filter: alpha(opacity=0);
    }
    img.hover-image {
      display: inline-block;
      visibility: visible;
      opacity: 1;
      filter: alpha(opacity=100);
    }
  }
}

.product-utils {
  position: absolute;
  height: 40px;
  top: 0;
  left: 0;
  right: 0;
  font-size: 13px;
  line-height: 40px;
  display: none;

  .quick-view {
    display: none;
    text-transform: uppercase;
